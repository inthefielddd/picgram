extends layouts/main

block content
    .form-container
        form(action=routes.editPicture(image.id) method="post")
            input(type="text" placeholder="Title" name="title" value=image.title)
            textarea(placeholder="Description" name="description")=image.description
            input(type="submit" value="Update Image")
        a.form-container__link(href=routes.deletePicture(image.id))
            button.delete Delete